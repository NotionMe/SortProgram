<UserControl
    x:Class="Practika2_OPAM_Ubohyi_Stanislav.Pages.Info.ComparisonPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="30">
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="36"
                FontWeight="Bold"
                Text="Порівняння алгоритмів сортування" />

            <Border
                Margin="0,0,0,20"
                Padding="20"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8">
                <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*,*,*">
                    <!-- Заголовки стовпців -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Алгоритм" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Складність" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Використання пам'яті" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Стабільність" />

                    <!-- Бульбашкове сортування -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10">
                        <TextBlock FontWeight="SemiBold" Text="Bubble Sort" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10">
                        <TextBlock Text="O(n²)" />
                        <TextBlock FontSize="12" Text="У найгіршому випадку" />
                        <TextBlock Text="O(n)" />
                        <TextBlock FontSize="12" Text="У найкращому випадку" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,10">
                        <TextBlock Text="O(1)" />
                        <TextBlock FontSize="12" Text="Додаткова пам'ять" />
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="3" Margin="0,10">
                        <TextBlock Text="Так" />
                    </StackPanel>

                    <!-- Selection Sort -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,10">
                        <TextBlock FontWeight="SemiBold" Text="Selection Sort" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10">
                        <TextBlock Text="O(n²)" />
                        <TextBlock FontSize="12" Text="У всіх випадках" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,10">
                        <TextBlock Text="O(1)" />
                        <TextBlock FontSize="12" Text="Додаткова пам'ять" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="3" Margin="0,10">
                        <TextBlock Text="Ні" />
                    </StackPanel>

                    <!-- Insertion Sort -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,10">
                        <TextBlock FontWeight="SemiBold" Text="Insertion Sort" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,10">
                        <TextBlock Text="O(n²)" />
                        <TextBlock FontSize="12" Text="У найгіршому випадку" />
                        <TextBlock Text="O(n)" />
                        <TextBlock FontSize="12" Text="У найкращому випадку" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,10">
                        <TextBlock Text="O(1)" />
                        <TextBlock FontSize="12" Text="Додаткова пам'ять" />
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="3" Margin="0,10">
                        <TextBlock Text="Так" />
                    </StackPanel>

                    <!-- Quick Sort -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,10">
                        <TextBlock FontWeight="SemiBold" Text="Quick Sort" />
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,10">
                        <TextBlock Text="O(n log n)" />
                        <TextBlock FontSize="12" Text="У середньому випадку" />
                        <TextBlock Text="O(n²)" />
                        <TextBlock FontSize="12" Text="У найгіршому випадку" />
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,10">
                        <TextBlock Text="O(log n)" />
                        <TextBlock FontSize="12" Text="Додаткова пам'ять (рекурсія)" />
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="3" Margin="0,10">
                        <TextBlock Text="Ні" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Повернення назад -->
            <Button
                Width="65"
                Height="65"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="{DynamicResource PrimaryBrush}"
                BorderThickness="0"
                Click="BackButton_Click"
                CornerRadius="32"
                Cursor="Hand">
                <TextBlock
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Foreground="White"
                    Text="←" />
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl> 