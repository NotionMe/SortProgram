                        CornerRadius="100"
                        BoxShadow="0 4 15 0.3 #4F8EF7">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Offset="0" Color="#4F8EF7"/>
                            <GradientStop Offset="1" Color="#3F78E0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                
                <Border Width="190" 
                       Height="190" 
                       Classes="avatar"
                       ClipToBounds="True"
                       CornerRadius="95"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
