<UserControl
    x:Class="Practika2_OPAM_Ubohyi_Stanislav.Pages.Visualizations.BubbleSort"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Text="Бульбашкове сортування: Візуалізація" />

            <!-- Панель керування анімацією -->
            <Border
                Margin="0,0,0,20"
                Padding="15"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Налаштування" />

                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                        <!-- Розмір масиву -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            Text="Розмір масиву:" />
                        <Slider
                            Name="ArraySizeSlider"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,15,0"
                            Maximum="50"
                            Minimum="5"
                            Value="20" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="30"
                            VerticalAlignment="Center"
                            Text="{Binding #ArraySizeSlider.Value, StringFormat=\{0:0\}}" />

                        <!-- Швидкість анімації -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,15,0"
                            VerticalAlignment="Center"
                            Text="Швидкість:" />
                        <Slider
                            Name="SpeedSlider"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,10,15,0"
                            Maximum="10"
                            Minimum="1"
                            Value="5" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="30"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding #SpeedSlider.Value, StringFormat=\{0:0\}}" />

                        <!-- Тип генерації масиву -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,10,15,0"
                            VerticalAlignment="Center"
                            Text="Тип масиву:" />
                        <ComboBox
                            Name="ArrayTypeComboBox"
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Stretch"
                            SelectedIndex="0">
                            <ComboBoxItem Content="Випадковий" />
                            <ComboBoxItem Content="Майже відсортований" />
                            <ComboBoxItem Content="Зворотній порядок" />
                            <ComboBoxItem Content="Мало унікальних елементів" />
                        </ComboBox>

                        <!-- Кнопки керування -->
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                Name="GenerateButton"
                                Padding="12,8"
                                Content="Згенерувати"
                                Click="GenerateButton_Click" />
                            <Button
                                Name="StartButton"
                                Padding="12,8"
                                Content="Почати"
                                Click="StartButton_Click" />
                            <Button
                                Name="PauseButton"
                                Padding="12,8"
                                Content="Пауза"
                                Click="PauseButton_Click" />
                            <Button
                                Name="StepButton"
                                Padding="12,8"
                                Content="Крок"
                                Click="StepButton_Click" />
                            <Button
                                Name="ResetButton"
                                Padding="12,8"
                                Content="Скинути"
                                Click="ResetButton_Click" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Візуалізація масиву -->
            <Border
                Height="300"
                Margin="0,0,0,20"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8">
                <Grid Name="VisualizationGrid" Margin="10" />
            </Border>

            <!-- Статистика -->
            <Border
                Margin="0,0,0,20"
                Padding="15"
                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                CornerRadius="8">
                <Grid ColumnDefinitions="*,*,*">
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Порівняння" />
                        <TextBlock Name="ComparisonsTextBlock" Text="0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Обміни" />
                        <TextBlock Name="SwapsTextBlock" Text="0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontWeight="SemiBold"
                            Text="Час виконання" />
                        <TextBlock Name="TimeTextBlock" Text="0 мс" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Повернення назад -->
            <Button
                Width="65"
                Height="65"
                Margin="0,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="{DynamicResource PrimaryBrush}"
                BorderThickness="0"
                Click="BackButton_Click"
                CornerRadius="32"
                Cursor="Hand">
                <TextBlock
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Foreground="White"
                    Text="←" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl> 