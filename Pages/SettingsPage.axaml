<UserControl x:Class="Practika2_OPAM_Ubohyi_Stanislav.Pages.SettingsPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="20">
            <!-- Header Section -->
            <Border Width="1060" Height="100"
                    CornerRadius="15"
                    Margin="0,0,0,30">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#1E3A8A" Offset="0"/>
                        <GradientStop Color="#3B82F6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Text="Settings"
                               FontSize="42"
                               FontFamily="{StaticResource OswaldFont}"
                               FontWeight="Bold"
                               Foreground="#FFFFFF"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                    <Canvas>
                        <!-- Decorative elements -->
                        <Ellipse Canvas.Left="50" Canvas.Top="20" Width="15" Height="15" Fill="#FFFFFF" Opacity="0.2"/>
                        <Ellipse Canvas.Left="80" Canvas.Top="60" Width="10" Height="10" Fill="#FFFFFF" Opacity="0.15"/>
                        <Ellipse Canvas.Right="70" Canvas.Top="30" Width="12" Height="12" Fill="#FFFFFF" Opacity="0.2"/>
                        <Ellipse Canvas.Right="40" Canvas.Top="70" Width="8" Height="8" Fill="#FFFFFF" Opacity="0.15"/>
                    </Canvas>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect Color="#40000000" BlurRadius="14" OffsetX="0" OffsetY="4"/>
                </Border.Effect>
            </Border>

            <Border Classes="card"
                    CornerRadius="15"
                    Padding="25"
                    Margin="0,0,0,20"
                    BoxShadow="0 4 8 #40000000">
                
                <StackPanel Spacing="20">
                    <!-- Language Settings Section -->
                    <TextBlock Text="Language Settings" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               Foreground="{DynamicResource ThemeForegroundBrush}"/>
                    
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="10,0">
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Interface Language:" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"
                                   Foreground="{DynamicResource ThemeForegroundBrush}"/>
                        
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Name="LanguageSelector"
                                  Width="200"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="English" />
                            <ComboBoxItem Content="Українська" />
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
