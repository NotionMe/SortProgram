<UserControl x:Class="Practika2_OPAM_Ubohyi_Stanislav.Pages.SortingAlgorithmsPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="30">
            <Border Margin="0,10,0,20"
                    BoxShadow="0 4 8 #20000000"
                    Classes="fluentCard"
                    CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0"
                                Margin="20,15,10,15"
                                VerticalAlignment="Center">
                        <TextBlock Margin="0,0,0,10"
                                   FontFamily="{StaticResource OswaldFont}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Text="Bubble Sort" />
                        <TextBlock Margin="0,0,0,10"
                                   TextWrapping="Wrap">Bubble sort is a simple sorting algorithm that repeatedly steps through the list, compares adjacent elements and swaps them if they are in the wrong order. The pass through the list is repeated until the list is sorted.</TextBlock>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                            <Button Width="120"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="blueButton"
                                    Click="InfoBubbleSort_Click"
                                    Content="Learn More"
                                    CornerRadius="5" />
                            <Button Width="170"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="successButton"
                                    Content="Go to try it"
                                    Click="BubbleSortPage_Click"
                                    CornerRadius="5" />
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="200"
                            Height="150"
                            Margin="10,15,20,15"
                            BoxShadow="0 2 4 #20000000"
                            ClipToBounds="True"
                            CornerRadius="5">
                        <Image Source="avares://Practika2_OPAM_Ubohyi_Stanislav/Assets/Images/bubble_sort.gif"
                               Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>
            <Border Margin="0,10,0,20"
                    BoxShadow="0 4 8 #20000000"
                    Classes="fluentCard"
                    CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0"
                                Margin="20,15,10,15"
                                VerticalAlignment="Center">
                        <TextBlock Margin="0,0,0,10"
                                   FontFamily="{StaticResource OswaldFont}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Text="Selection Sort" />
                        <TextBlock Margin="0,0,0,10"
                                   TextWrapping="Wrap">Selection sort is a simple sorting algorithm that repeatedly steps through the list, compares each pair of adjacent items and swaps them if they are in the wrong order. The pass through the list is repeated until the list is sorted.</TextBlock>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                            <Button Width="120"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="blueButton"
                                    Content="Learn More"
                                    Click="InfoSelectionSort_Click"
                                    CornerRadius="5" />
                            <Button Width="170"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="successButton"
                                    Content="Go to try it"
                                    Click="SelectionSortPage_Click"
                                    CornerRadius="5" />
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="200"
                            Height="150"
                            Margin="10,15,20,15"
                            BoxShadow="0 2 4 #20000000"
                            ClipToBounds="True"
                            CornerRadius="5">
                        <Image Source="avares://Practika2_OPAM_Ubohyi_Stanislav/Assets/Images/selection_sort.gif"
                               Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>
            <Border Margin="0,10,0,20"
                    BoxShadow="0 4 8 #20000000"
                    Classes="fluentCard"
                    CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0"
                                Margin="20,15,10,15"
                                VerticalAlignment="Center">
                        <TextBlock Margin="0,0,0,10"
                                   FontFamily="{StaticResource OswaldFont}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Text="Quick Sort" />
                        <TextBlock Margin="0,0,0,10"
                                   TextWrapping="Wrap">Quick sort is a divide and conquer algorithm that works by selecting a pivot element and partitioning the array into two sub-arrays, one with elements less than the pivot and one with elements greater than the pivot. The sub-arrays are then sorted recursively.</TextBlock>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                            <Button Width="120"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="blueButton"
                                    Content="Learn More"
                                    Click="InfoQuickSort_Click"
                                    CornerRadius="5" />
                            <Button Width="170"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="successButton"
                                    Content="Go to try it"
                                    Click="QuickSortPage_Click"
                                    CornerRadius="5" />
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="200"
                            Height="150"
                            Margin="10,15,20,15"
                            BoxShadow="0 2 4 #20000000"
                            ClipToBounds="True"
                            CornerRadius="5">
                        <Image Source="avares://Practika2_OPAM_Ubohyi_Stanislav/Assets/Images/quick_sort.gif"
                               Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>
            <Border Margin="0,10,0,20"
                    BoxShadow="0 4 8 #20000000"
                    Classes="fluentCard"
                    CornerRadius="10">
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel Grid.Column="0"
                                Margin="20,15,10,15"
                                VerticalAlignment="Center">
                        <TextBlock Margin="0,0,0,10"
                                   FontFamily="{StaticResource OswaldFont}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   Text="Insertion Sort" />
                        <TextBlock Margin="0,0,0,10"
                                   TextWrapping="Wrap">Insertion sort is a simple sorting algorithm that builds the final sorted array one item at a time. It is much less efficient on large lists than more advanced algorithms but can be efficient for small data sets.</TextBlock>
                        <StackPanel Orientation="Horizontal"
                                    Spacing="10">
                            <Button Width="120"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="blueButton"
                                    Content="Learn More"
                                    Click="InfoInsertionSort_Click"
                                    CornerRadius="5" />
                            <Button Width="170"
                                    Margin="0,10,0,0"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    Classes="successButton"
                                    Content="Go to try it"
                                    Click="InsertionSortPage_Click"
                                    CornerRadius="5" />
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="200"
                            Height="150"
                            Margin="10,15,20,15"
                            BoxShadow="0 2 4 #20000000"
                            ClipToBounds="True"
                            CornerRadius="5">
                        <Image Source="avares://Practika2_OPAM_Ubohyi_Stanislav/Assets/Images/insertion_sort.gif"
                               Stretch="UniformToFill" />
                    </Border>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>