<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ====================  -->
    <!--  LIGHT THEME STYLES  -->
    <!--  ====================  -->

    <Styles.Resources>
        <!-- Кольори для кнопок в алгоритмах сортування -->
        <SolidColorBrush x:Key="ButtonBackgroundHover">#3e62e5</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonBackgroundPressed">#2a4cd6</SolidColorBrush>
    </Styles.Resources>

    <!--  Загальні стилі для світлої теми  -->
    <Style Selector="Grid.ThemeLight">
        <Setter Property="Background" Value="#FFFFFF" />
    </Style>

    <!--  Стилі для елементів у світлій темі  -->
    <Style Selector="Grid.ThemeLight TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}" />
    </Style>

    <Style Selector="Grid.ThemeLight Border">
        <Setter Property="Background" Value="{StaticResource LightCardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource LightBorderColorBrush}" />
    </Style>

    <Style Selector="Grid.ThemeLight Button">
        <Setter Property="Foreground" Value="{StaticResource LightTextBrush}" />
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
    </Style>

</Styles>
