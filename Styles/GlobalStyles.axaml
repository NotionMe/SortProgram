<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Імпорт кольорової палітри -->
    <StyleInclude Source="/Styles/Colors.axaml"/>
    
    <!-- Імпорт тем -->
    <StyleInclude Source="/Styles/Themes/LightTheme.axaml"/>
    <StyleInclude Source="/Styles/Themes/DarkTheme.axaml"/>
    
    <!-- Імпорт стилів компонентів -->
    <StyleInclude Source="/Styles/Components/ButtonStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/CustomButtonStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/CardStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/FormStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/NavigationStyles.axaml"/>
    
    <!-- ==================== -->
    <!-- BASIC TEXT STYLES    -->
    <!-- ==================== -->
    <Style Selector="TextBlock.heading1">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style Selector="TextBlock.heading2">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <Style Selector="TextBlock.heading3">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style Selector="TextBlock.paragraph">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="LineHeight" Value="1.5"/>
    </Style>
    
    <!-- ==================== -->
    <!-- LAYOUT STYLES        -->
    <!-- ==================== -->
    <Style Selector="Grid.container">
        <Setter Property="Margin" Value="20"/>
    </Style>
    
    <Style Selector="StackPanel.section">
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>
    
    <Style Selector="Border.separator">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource GreyMedium}"/>
        <Setter Property="Margin" Value="0,10"/>
    </Style>

    <!-- ==================== -->
    <!-- THEME COLORS         -->
    <!-- ==================== -->
    <Style Selector="Grid.ThemeDark">
        <Setter Property="Background" Value="#333333"/>
    </Style>
    
    <Style Selector="Grid.ThemeLight">
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <!-- ==================== -->
    <!-- TITLE BAR STYLES     -->
    <!-- ==================== -->
    <Style Selector="Border.titleBar">
        <Setter Property="Height" Value="30" />
        <Setter Property="Background" Value="#333333" />
    </Style>
    
    <Style Selector="Button.titleBarButton">
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Button.titleBarButton TextBlock">
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="Opacity" Value="1"/>
    </Style>
    
    <Style Selector="Button.titleBarButton.closeButton">
        <Setter Property="Foreground" Value="#E0E0E0"/>
    </Style>

    <Style Selector="TextBlock.sectionTitle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,10,0,10"/>
    </Style>
    
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="#20000000" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BoxShadow" Value="0 2 5 #20000000" />
        <Setter Property="Padding" Value="15" />
    </Style>
    
    <!-- ==================== -->
    <!-- FORM CONTROL STYLES  -->
    <!-- ==================== -->
    <Style Selector="TextBox.formControl">
        <Setter Property="Height" Value="35"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#ced4da"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="TextBox.formControl:focus">
        <Setter Property="BorderBrush" Value="#555555"/>
    </Style>
    
    <Style Selector="ComboBox.formControl">
        <Setter Property="Height" Value="35"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#ced4da"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    
    <Style Selector="ComboBox.formControl:focus">
        <Setter Property="BorderBrush" Value="#555555"/>
    </Style>

    <Style Selector="Button.primaryBlueButton">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.primaryBlueButton:pointerover">
        <Setter Property="Background" Value="#005a9e" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.blueButton">
        <Setter Property="Background" Value="#3498db" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.blueButton:pointerover">
        <Setter Property="Background" Value="#2980b9" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.successButton">
        <Setter Property="Background" Value="#2ecc71" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.successButton:pointerover">
        <Setter Property="Background" Value="#27ae60" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.warningButton">
        <Setter Property="Background" Value="#f39c12" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.warningButton:pointerover">
        <Setter Property="Background" Value="#e67e22" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.dangerButton">
        <Setter Property="Background" Value="#e74c3c" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style Selector="Button.dangerButton:pointerover">
        <Setter Property="Background" Value="#c0392b" />
        <Setter Property="Foreground" Value="White" />
    </Style>
</Styles>
